<resources xmlns:tools="http://schemas.android.com/tools" xmlns:ns2="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="Theme.EasyPatient" parent="Theme.EasyPatient.Base" />

    <style name="Theme.EasyPatient.NoActionBar" parent="Theme.EasyPatient.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.EasyPatient.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/colorText</item>
        <item name="colorAccent">@color/colorText</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/textColor</item>
        <item name="colorSurface">@color/colorWhite</item>
        <item name="colorOnSurface">@color/colorText</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="colorOnBackground">@color/textColor</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_on_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="toolbarStyle">@style/Theme.EasyPatient.Toolbar</item>
        <item name="android:navigationBarColor">@color/background_material_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/Theme.EasyPatient.Toolbar.DrawerArrowToggle</item>
        <item name="fontFamily">@font/opensans_font</item>
        <item name="android:fontFamily">@font/opensans_font</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textViewStyle">@style/Textview</item>
        <item name="android:datePickerDialogTheme">@style/DialogTheme</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_menu</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="Textview" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!-- Toolbar -->
    <style name="Theme.EasyPatient.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/black</item>
        <item name="colorOnPrimary">@color/color_background</item>
        <item name="colorControlNormal">@color/color_on_background</item>
        <item name="colorButtonNormal">@color/color_on_background</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="Theme.EasyPatient.Toolbar.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/color_on_background</item>
    </style>

    <style name="Theme.EasyPatient.Field" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/colorText</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorControlActivated">@color/colorText</item>
        <item name="errorTextAppearance">@style/error</item>
    </style>

    <style name="error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/errorColor</item> <!--apply the color you wat here -->
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.EasyPatient.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/colorText</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorControlActivated">@color/colorText</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">500dp</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/opensans_font</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#50B76C</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#BCC0C7
        </item>
    </style>

    <style name="pin_edittext_style">
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:minEms">2</item>
        <item name="android:inputType">number</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/otp_text_bg</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="tv_style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tv_style_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationDrawerStyle">

        <item name="android:textSize">12sp</item><!-- text size in menu-->
        <item name="listPreferredItemHeightSmall">36dp</item>
    </style>

    <style name="check_color">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme for OnBoardingActivity (applying some transition) -->
    <style name="Theme.EasyPatient.OnBoarding" parent="Theme.EasyPatient.NoActionBar">
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowExitTransition">@transition/activity_main_exit</item>
        <item name="android:windowReenterTransition">@transition/activity_main_reenter</item>
        <item name="android:fontFamily">@font/opensans_font</item>
    </style>
    
    <style name="customfontstyle">
        <item name="android:fontFamily">@font/opensans_font</item>
    </style>

    <style name="Toolbar.SmallTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Toolbar.NormalTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item> <!--Changes the Shape Apperance-->
        <!--<item name="hintTextColor">?attr/colorOnSurface</item>-->
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/colorText</item>  <!--Activated color-->
        <item name="colorOnSurface">@color/colorText</item>    <!--Normal color-->
        <item name="colorError">@color/errorColor</item>        <!--Error color-->

        <!--Text Appearance styles-->
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>

        <!--Note: When setting a materialThemeOverlay on a custom TextInputLayout style, don’t forget to set editTextStyle to either a @style/Widget.MaterialComponents.TextInputEditText.* style or to a custom one that inherits from that.
        The TextInputLayout styles set materialThemeOverlay that overrides editTextStyle with the specific TextInputEditText style needed. Therefore, you don’t need to specify a style tag on the edit text.-->
        <item name="editTextStyle">@style/MyTextInputEditText_filledBox</item>
    </style>

    <style name="MyTextInputEditText_filledBox" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">
        <!-- left and right padding -->
        <item name="android:paddingStart" ns2:ignore="NewApi">2dp</item>
        <item name="android:paddingEnd" ns2:ignore="NewApi">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>

        <!-- top and bottom padding -->
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/opensans_font</item>
        <item name="android:fontFamily">@font/opensans_font</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/opensans_font</item>
        <item name="android:fontFamily">@font/opensans_font</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>


    <style name="EdittextStyle">

        <item name="android:textSize">@dimen/_14ssp</item><!-- text size in menu-->
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!--Date Picker Style-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Theme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevationOverlayEnabled">true</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="android:letterSpacing">0</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.CheckBox" parent="">
        <item name="colorSecondary">@color/colorPrimary</item>   <!-- checked -->
        <item name="colorOnSurface">@color/colorText</item>  <!-- unchecked -->
    </style>


</resources>
