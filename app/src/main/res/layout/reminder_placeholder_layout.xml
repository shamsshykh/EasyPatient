<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View android:id="@+id/imgIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_home_med_reminder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:backgroundTint="@color/shimmerBackground"/>

    <View android:id="@+id/txtTitle"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_14sdp"
        android:background="@color/shimmerBackground"
        app:layout_constraintTop_toTopOf="@+id/imgIcon"
        app:layout_constraintStart_toEndOf="@+id/imgIcon"
        app:layout_constraintBottom_toBottomOf="@+id/imgIcon"
        android:layout_marginStart="@dimen/_8sdp"/>

    <View android:id="@+id/txtDesc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_16sdp"
        android:background="@color/shimmerBackground"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        android:layout_marginTop="@dimen/_4sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>