<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBottomNavigation"
            tools:visibility="visible"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_16sdp"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_search_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_search_et"
                android:drawableEnd="@drawable/ic_search_black"
                android:drawableRight="@drawable/ic_search_black"
                android:fontFamily="@font/opensans_regular"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:textColor="@color/colorText"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toStartOf="@+id/img_close_search_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_close_search_view"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_close_black"
                android:layout_marginEnd="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>